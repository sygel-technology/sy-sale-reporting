<odoo>

    <record id="low_sold_product_report_tree" model="ir.ui.view">
        <field name="name">low.sold.product.report.tree</field>
        <field name="model">low.sold.product.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="categ_id" optional="hide" />
                <field name="detailed_type" optional="hide" />
                <field name="product_uom_qty" />
                <field name="product_uom" optional="hide" />
                <field
                    name="price_subtotal"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                />
                <field name="currency_id" column_invisible="True" />
                <button string="View product" type="object" name="view_product" />
            </tree>
        </field>
    </record>

    <record id="low_sold_product_report_pivot" model="ir.ui.view">
         <field name="name">low.sold.product.report.pivot</field>
         <field name="model">low.sold.product.report</field>
         <field name="arch" type="xml">
             <pivot string="Sales Analysis" sample="1">
                <field name="product_tmpl_id" type="row" />
                <field name="product_id" type="row" />
                <field name="product_uom_qty" type="measure" />
                <field name="price_subtotal" type="measure" />
             </pivot>
         </field>
    </record>

    <record id="low_sold_product_report_search" model="ir.ui.view">
        <field name="name">low.sold.product.report.search</field>
        <field name="model">low.sold.product.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id" />
                <field name="product_tmpl_id" />
                <field name="categ_id" />
                <filter
                    string="No Sales"
                    name="no_sales"
                    domain="[('product_uom_qty', '=', 0)]"
                />
                <filter
                    string="Low Sales"
                    name="low_sales"
                    domain="[('product_uom_qty', '>', 0)]"
                />
                <group expand="1" string="Group By">
                    <filter
                        string="Product Template"
                        name="product_tmpl_id"
                        context="{'group_by':'product_tmpl_id'}"
                    />
                    <filter
                        string="Product Category"
                        name="Category"
                        context="{'group_by':'categ_id'}"
                    />
                    <filter
                        string="Product Uom"
                        name="Uom"
                        context="{'group_by':'product_uom'}"
                    />
                    <filter
                        string="Product Type"
                        name="Type"
                        context="{'group_by':'detailed_type'}"
                    />
                </group>
            </search>
        </field>
    </record>

</odoo>
